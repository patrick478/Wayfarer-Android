<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title goes here"
            android:id="@+id/goalTitle" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textStyle="bold|normal"
            android:textColor="@android:color/primary_text_light" android:singleLine="false" android:textSize="20dp"
            android:textIsSelectable="false" android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed description goes here"
            android:id="@+id/goalDescription" android:layout_alignLeft="@+id/goalTitle" android:layout_below="@+id/goalTitle"
            android:textColor="@android:color/secondary_text_light"
            android:layout_alignRight="@+id/goalTitle" android:layout_margin="6dp"/>
</RelativeLayout>